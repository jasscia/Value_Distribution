em {
  color: lightseagreen;
}
button {
  height: 40px;
  width: 150px;
  border-radius: 10px;
  border: none;
  font-size: 18px;
  letter-spacing: 5px;
  background: lightgreen;
}
.list {
  margin: 0;
  padding: 0;
  height: 30px;
  width: 100%;
  font-size: 14px;
  color: #000;
  border-bottom: 2px solid lightgrey;
  display: flex;
  justify-content: space-between;
  transition: display 0.5s ease-in-out;
}
.list input {
  border: 1px solid lightgrey;
  height: 22px;
  margin: 2px 0;
  width: 100px;
  text-align: center;
}
.list label {
  display: inline-block;
  height: 24px;
  margin: 3px 0;
  width: 100px;
  text-align: center;
}
.hidden {
  display: none;
}
