em {
  color: lightseagreen;
}
button {
  height: 40px;
  width: 150px;
  border-radius: 10px;
  border: none;
  font-size: 18px;
  letter-spacing: 5px;
  background: lightgreen;
}
.myApp {
  width: 100%;
  margin: 0;
  padding: 0;
  font-size: 0;
}
.myApp .tabBar {
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
}
.myApp .tabBar .bar {
  flex: 1;
  text-align: center;
  font-size: 20px;
  line-height: 40px;
  background: #eee;
}
.myApp .tabBar .active {
  background: #ddd;
}
